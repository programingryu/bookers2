<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 pt-4 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <div class="alert alert-warning">
          <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"感想", class: "form-control" %>
        </div>
        
        <%= f.submit "Update Book", class: "btn btn-success" %>
        
        <p class="mt-4">
          <%= link_to "Show", book_path(@book.id)%> |
          <%= link_to "Back", books_path %>
        </p>
      <% end %>
    </div>
  </div>
</div>