<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 pt-4 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <% if @user.errors.any? %>
        <div class="errors-box">
          <p><%= @user.errors.count %> errors prohibited this book from being saved:</p>
    
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, id:"inputIntroduction", class: "form-control" %>
        </div>
        <%= f.submit "Update User" %>
        
      <% end %>
    </div>
  </div>
</div>